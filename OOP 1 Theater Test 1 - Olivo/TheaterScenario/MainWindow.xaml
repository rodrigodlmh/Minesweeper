<Window x:Class="TheaterScenario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Object-Oriented Programming 1: Theater" Height="330" Width="440">
    <Grid>
        <Button x:Name="newTheaterButton" Content="New theater" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="23" Margin="10,10,0,0" Click="newTheaterButton_Click"/>
        <Button x:Name="findGodfatherRatingButton" Content="Find The Godfather's rating" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="23" Click="findGodfatherRatingButton_Click" Margin="10,38,0,0"/>
        <Button x:Name="calculateAverageRuntimeButton" Content="Calculate average movie runtime" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="200" Height="23" Click="calculateAverageRuntimeButton_Click"/>
    </Grid>
</Window>
